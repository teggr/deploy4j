<configuration>

  <!-- Appender that only prints the message for INFO-level logs -->
  <appender name="INFO_ONLY" class="ch.qos.logback.core.ConsoleAppender">
    <filter class="ch.qos.logback.classic.filter.LevelFilter">
      <level>INFO</level>
      <onMatch>ACCEPT</onMatch>
      <onMismatch>DENY</onMismatch>
    </filter>
    <encoder>
      <pattern>%msg%n</pattern>
    </encoder>
  </appender>

  <!-- Appender that prints the full pattern for non-INFO levels (DEBUG, TRACE, WARN, ERROR) -->
  <appender name="STD_FORMAT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- Explicitly deny INFO so INFO messages are only handled by INFO_ONLY -->
    <filter class="ch.qos.logback.classic.filter.LevelFilter">
      <level>INFO</level>
      <onMatch>DENY</onMatch>
      <onMismatch>NEUTRAL</onMismatch>
    </filter>

    <!-- Accept everything DEBUG and above (TRACE/DEBUG/WARN/ERROR handled here). INFO is already denied above. -->
    <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
      <level>TRACE</level>
    </filter>

    <encoder>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Root logger uses both appenders. Level will be controlled programmatically in BaseCliCommand -->
  <root level="INFO">
    <appender-ref ref="INFO_ONLY" />
    <appender-ref ref="STD_FORMAT" />
  </root>

</configuration>
